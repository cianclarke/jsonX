<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/bootstrap/less/bootstrap.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="/js/jsonX.js"></script>
    <script src="bootstrap/js/bootstrap.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form method="post" action="/json" class="form-horizontal">
      <fieldset>
      

      <legend>Personal Details</legend>

      <% fields.forEach(function(field){ %>
          <label class="checkbox">
            <input type="checkbox" id="<%= field %>" name="fields" value="<%= field %>">
            <%= field %>
          </label>
      <% }) %>


      </fieldset>
     <!-- <fieldset>
      <select name="fields" multiple="multiple" id="multiSelect">
                  <option>FirstName</option>
                  <option>LastName</option>
                  <option>FullName</option>
                  <option>Company</option>
                  <option>Address</option>
                  <option>City</option>
                  <option>State</option>
                  <option>ZIP</option>
                  <option>Phone</option>
                  <option>Fax</option>
                  <option>Email</option>
                  <option>Web Address</option>
      </select><br />-->
      
      <label>Return Type</label>
      <div class="btn-group" data-toggle="buttons-radio">
        <div class="btn type active">Array [ ]</div>
        <div class="btn type">Map { }</div>
        <input type="hidden" name="type" value="array">
      </div><br />
      
      <label>Limit</label>
      <input type="number" name="limit" value="50" min="1" max="5000" /><br /><br />

      <button type="submit" class="btn btn-primary">Generate JSON</button>
      </fieldset>
    </form>
    <a href="https://github.com/cianclarke/jsonX"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png" alt="Fork me on GitHub"></a>
  </body>
</html>